.container.account_content
    .row
        .col.aside_left
            .user_menu
                .user_menu_header
                    .user_photo(style="background-image:url(img/examples/Ellipse.png)")
                    .user_name Matt Szewczyk
                -var menu=['Settings','My stats','Schedule','Security','Logout'];
                .user_menu_body
                    ul.nav
                        for user_nav_item, index in menu
                            if user_nav_item===page.title
                                li.active
                                    a(href="#")=user_nav_item
                            else
                                li
                                    a(href="#")=user_nav_item

        .col.main_right
            .h1.page_title My Account

            ul.nav_tabs
                li.act Upcoming games
                li Recent games
            .tab_content
                .tab_pane.active
                    -for(var g=1;g<=3;g++)
                        .games_group
                            .games_group_header
                                .date
                                    picture
                                        img(src="img/icons/calendar.svg")
                                    div.date_text Monday, 01 Mar 2021
                                if g===1
                                    button.btn.btn_blue
                                        span.add Add game

                            .games_group_body
                                -for(var gm=1;gm<=3;gm++)
                                    .game_item_box
                                        .game_item
                                            .game_item_header
                                                .col_left Matchup 5 01:00 PM Avengers
                                                .col_center
                                                    .players
                                                        .player.first
                                                            .player_photo(style="background-image:url(img/examples/Ellipse7.png)")
                                                            .player_name Matt Szevczyk
                                                        span VS
                                                        .player.second
                                                            .player_name Liv Tyler
                                                            .player_photo(style="background-image:url(img/examples/Ellipse10.png)")
                                                .col_right
                                                    button.btn.b_red.game_item_toggle Change

                                            .game_item_body
                                                .game_item_body_title.h2 Please check the entered data very carefully before saving it
                                                .game_row
                                                    .game_row_left
                                                        .highscore
                                                            div
                                                                .highscore_title HIGHSCORE
                                                                .player_name Matt Szewczyk
                                                                .result 1,308,494,420

                                                    .game_row_center
                                                        .games_list
                                                            .games_list_item.first
                                                                .col_left Matt Szevczyk
                                                                .col_center
                                                                .col_right Liv Tyler
                                                            -for(var i=1;i<=3;i++)
                                                                .games_list_item
                                                                    .col_left
                                                                        input.form_control(value="Score")
                                                                    .col_center Game #{i}
                                                                    .col_right
                                                                        input.form_control(value="Score")


                                                    .game_row_right
                                                        .highscore
                                                            div
                                                                .highscore_title HIGHSCORE
                                                                .player_name Liv Tyler
                                                                .result 780,000,000
                                                .game_btn_box
                                                    button.btn.b_red Delete this game
                                                    button.btn.btn_red Save
                                                    button.btn.b_blue Change game details

                    .pagination
                         ul.nav
                             li
                                a.page_prev(href="#")
                             li
                                a(href="#") 1
                             li
                                a.active(href="#") 2
                             li
                                a(href="#") 3
                             li
                                a(href="#") 4
                             li
                                span ...
                             li
                                a(href="#") 84
                             li
                                 a.page_next(href="#")



                .tab_pane

