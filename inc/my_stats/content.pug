.container.account_content
    .row
        .col.aside_left
            .user_menu
                .user_menu_header
                    .user_photo(style="background-image:url(img/examples/Ellipse.png)")
                    .user_name Matt Szewczyk
                -var menu=['Settings','My stats','Schedule','Security','Logout'];
                .user_menu_body
                    ul.nav
                        for user_nav_item, index in menu
                            if user_nav_item===page.title
                                li.active
                                    a(href="#")=user_nav_item
                            else
                                li
                                    a(href="#")=user_nav_item
            .aside_content.p_20
                .widjet
                    .widjet_title My highscores
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option Lord of the Rings #{s}
                    .table_box
                        table.widjet_table
                            thead
                                tr
                                    th #
                                    th Scores
                            tbody
                                -for (var tr4 = 1; tr4 <= 3; tr4++)
                                    tr
                                        td #{tr4}
                                        td 1,308,494,420
                    .j_center.pt_20
                        a.btn.btn_red.show_more(href="#") Show more
            .aside_content.p_20
                .widjet
                    .widjet_title My Standings
                    .table_box
                        table.widjet_table
                            thead
                                tr
                                    th Season
                                    th #
                            tbody
                                -for (var tr4 = 1; tr4 <= 8; tr4++)
                                    tr
                                        td Summer 2020
                                        td #{tr4}
                    .j_center.pt_20
                        a.btn.btn_red.show_more(href="#") Show more

        .col.main_right
            .title-filter
                .h1.page_title Matt Szewczyk`s career
                .filter
                    .h2 Filter by season
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option ALL #{s}
            .table_box
                table.table_regular.table_stats
                    thead
                        tr
                            -for(var th=1;th<=10;th++)
                                if th===1
                                    th Player
                                else
                                    th MACH
                    tbody
                        -for(var tr=1;tr<=10;tr++)
                            tr
                                -for(var td=1;td<=10;td++)
                                    if td===1
                                        td Matt S.
                                    else if td===5
                                        td -
                                    else
                                        td  3 - 1
            .title.b_0
                .title_content
                    .h1.text_center Detailed statistics
            .sort_box
                div.item.d_flex
                    .h2 Choose season
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option Summer 202#{s}
                div.item
                    .switcher
                        span.text REGULAR
                        .switcher_wrapper
                            .tumbler
                        span.text PLAY-OFF
            -var th1=['#','Player','Wins','GW','Last WK'];
            .table_box.pb_40
                table.table_regular
                    thead
                        tr
                            for th1_item, index in th1
                                th=th1_item
                    tdody
                        -for (var tr1 = 1; tr1 <= 10; tr1++)
                            tr
                                td #{tr1}
                                td Dave Crudele
                                td #{tr1}0
                                td 2#{tr1}
                                td #{tr1} - 0
            .sort_box.two_select
                div.item.d_flex
                    .title
                        .title_content
                            .h1 Choose opponent
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                                            option Liv Tyler #{s}
                div.item
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                                        option Avengers #{s}

            -var th1 = ['Player', 'Game 1', 'Game 2', 'Game 3', 'GW'];
            .table_box.mb_20
                table.table_play-off
                    thead
                        tr
                            for th1_item, index in th1
                                th=th1_item
                    tdody
                        -for (var tr1 = 1; tr1 <= 5; tr1++)
                            tr
                                td(colspan="5")
                                    b 3 of 8 - November 10th, 2020
                            tr
                                td
                                    strong Matt S.
                                td
                                    strong 142,735,070
                                td
                                    strong 27,455,800
                                td
                                td
                                    strong 2
                            tr
                                td Live T.
                                td 4,715,940
                                td 8,762,860
                                td
                                td 0
                            tr
                                td Avengers
                                td Score
                                td Score
                                td Score
                                td
            .j_center.pt_20
                a.btn.btn_red.show_more(href="#") Show more
