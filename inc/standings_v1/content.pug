.container
    .title.full_width
        .title_content
            .h1 Choose season
            select.custom_select
                -for (var s = 1; s <= 3; s++)
                    option Winter 200#{s}
    .row
        .col.page_content
            .sort_box
                div.item.d_flex
                    .h2 Player standings
                    select.custom_select
                        -for(var s=1;s<=3;s++)
                            option Winter 200#{s}
                div.item
                    .switcher
                        span.text REGULAR
                        .switcher_wrapper
                            .tumbler
                        span.text PLAY-OFF
            .switcher_tabs
                .tab_regular
                    -var th1=['#','Player','Wins','GW','Last WK'];
                    .table_box.mb_115
                        table.table_regular
                            thead
                                tr
                                    for th1_item, index in th1
                                        th=th1_item
                            tdody
                                -for (var tr1 = 1; tr1 <= 10; tr1++)
                                    tr
                                        td #{tr1}
                                        td Dave Crudele
                                        td #{tr1}0
                                        td 2#{tr1}
                                        td #{tr1} - 0
                .tab_play-off
                    .sort.j_center
                        -var sort1 = ['', 'Semi Final 1', 'Semi Final 2', 'Final'];
                        ul.sort_nav.mb_30
                            -for (var sn1 = 1; sn1 <= 3; sn1++)
                                               if sn1 === 3
                                                   li.active
                                                       a(href="#")=sort1[sn1]
                                               else
                                                   li
                                                       a(href="#")=sort1[sn1]
                    -var th2 = ['Player', 'Game 1', 'Game 2', 'Game 3', 'GW'];
                    .table_box.mb_20
                        table.table_play-off
                            thead
                                tr
                                    for th2_item, index in th2
                                        th=th2_item
                            tdody
                                -for (var tr2 = 1; tr2 <= 10; tr2++)
                                      if tr2 === 1
                                          tr
                                              td
                                                  strong Game
                                              td
                                                  strong (2) Wayne
                                              td
                                                  strong (4) Jenny
                                              td
                                                  strong Winner
                                              td
                                                  strong Series
                                      else
                                          tr
                                              td Addams
                                              td 11,702,300
                                              td 66,762,860
                                              td (4)Jenny
                                              if tr1 === 3
                                                  td
                                                      b Wayne: 5
                                              else
                                                  td Wayne: 4

            .sort_box.two_select
                div.item.d_flex
                    .title
                        .title_content
                            .h1 Choose opponent
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                                option Liv Tyler #{s}
                div.item
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option Avengers #{s}

            -var th1 = ['Player', 'Game 1', 'Game 2', 'Game 3', 'GW'];
            .table_box.mb_20
                table.table_play-off
                    thead
                        tr
                            for th1_item, index in th1
                                th=th1_item
                    tdody
                        -for (var tr1 = 1; tr1 <= 5; tr1++)
                            tr
                                td(colspan="5")
                                    b 3 of 8 - November 10th, 2020
                            tr
                                td
                                    strong Matt S.
                                td
                                    strong 142,735,070
                                td
                                    strong 27,455,800
                                td
                                td
                                    strong 2
                            tr
                                td Live T.
                                td 4,715,940
                                td 8,762,860
                                td
                                td 0
                            tr
                                td Avengers
                                td Score
                                td Score
                                td Score
                                td
            .j_center.pt_20
                a.btn.btn_red.show_more(href="#") Show more



        .col.aside
            .aside_content.p_20
                .h1 Matt Szewczyk
                .sub_title All-Time records
                hr
                .widjet
                    .widjet_title Highscores
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option Avengers #{s}
                    .table_box
                        table.widjet_table
                            thead
                                tr
                                    th #
                                    th Player
                                    th Scores
                            tbody
                                -for(var tr4=1;tr4<=3;tr4++)
                                    tr
                                        td #{tr4}
                                        td Matt Szewczyk
                                        td 50,000,000
                    .j_center.pt_20
                        a.btn.btn_red.show_more(href="#") Show more
                .widjet
                    .widjet_title Average scores
                    .table_box
                        table.widjet_table
                            thead
                                tr
                                    th #
                                    th Player
                                    th Scores
                            tbody
                                -for (var tr4 = 1; tr4 <= 10; tr4++)
                                    tr
                                        td #{tr4}
                                        td Matt Szewczyk
                                        td 50,000,000
                    .j_center.pt_20
                        a.btn.btn_red.show_more(href="#") Show more
            .aside_content.p_20
                .h1 Highest Scores
                .sub_title All-Time League
                hr
                .widjet
                    .widjet_title
                    select.custom_select
                        -for (var s = 1; s <= 3; s++)
                            option Avengers #{s}
                    .table_box
                        table.widjet_table
                            thead
                                tr
                                    th #
                                    th Player
                                    th Scores
                            tbody
                                -for (var tr4 = 1; tr4 <= 3; tr4++)
                                    tr
                                        td #{tr4}
                                        td Matt Szewczyk
                                        td 50,000,000
                    .j_center.pt_20
                        a.btn.btn_red.show_more(href="#") Show more