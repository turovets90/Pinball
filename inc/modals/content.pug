    #login.modal_window.small
        <button title="Close (Esc)" type="button" class="mfp-close d_hide">×</button>
        .modal_title
            .h1 Log in
            img(src="img/modal_logo.svg")
        .modal_subtitle Nice to meet you in our pinball league Please put in correct data and enjoy yourselves.
        form
            .modal_form
                .field
                    input.form_control(type="email" name="email" placeholder="E-mail" required)
                .field.mb_10
                    input.form_control(type="password" name="password" placeholder="Password" required)
                .field
                    .checkbox
                        input(type="checkbox" id="remember")
                        label(for="remember") Remember me
                .field
                    button.btn.btn_red(type="submit") Log in

